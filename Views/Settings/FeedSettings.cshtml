@model FeedSettings

@{
    ViewData["Title"] = "Settings";
}

<div class="row">
    <form asp-controller="Settings" asp-action="FeedSettings" method="post" class="sign-up">
        <h1 class="sign-up-title">Feeder Settings</h1>

        <div class="form-group">
            <label asp-for="Uri">Url</label>
            <input type="text" asp-for="Uri" class="sign-up-input">
            <span class="text-danger" asp-validation-for="Uri" />
        </div>

        <div class="form-group">
            <label asp-for="UpdateTime">Update time(in seconds)</label>
            <input type="number" asp-for="UpdateTime" class="sign-up-input">
            <span class="text-danger" asp-validation-for="UpdateTime" />
        </div>

        <input type="submit" value="Show" class="sign-up-button">
    </form>
</div>